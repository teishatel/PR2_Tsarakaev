<Window x:Class="todo.MainEmpty"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:todo"
        mc:Ignorable="d"
        Title="MainEmpty" Height="600" Width="800">
    <Grid>
        <WrapPanel>
            <Image HorizontalAlignment="Center" Height="76" VerticalAlignment="Top" Width="76" Source="/Фото профиля.png" Margin="10,10,0,0"/>
            <Label Content="Добро пожаловать!" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="36" Margin="20,100,0,0"/>
            <Label Content="Создайте свою первую задачу" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="36" Margin="105,50,0,50"/>
            <Button Background="#FFF96060" BorderBrush="#FFF96060" Foreground="White" Content="Создать первую задачу" Height="40" FontSize="16" Width="204" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="300,0,0,0">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="5, 5, 5, 5"/>
                    </Style>
                </Button.Resources>
            </Button>
        </WrapPanel>
    </Grid>
</Window>
